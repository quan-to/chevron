{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "noImplicitAny": true,
    "declaration": true,
    "strict": true,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./typings"],
    "sourceMap": true,
    "lib": [
       "es2017",
       "dom",
       "esnext.asynciterable"
    ]
  },
  "include": [
    "src/**/*"
  ],
}