  },
  "homepage": "https://github.com/quan-to/chevron#readme",
  "dependencies": {
    "@types/node": "^13.9.2",
    "bindings": "^1.5.0",
    "node-addon-api": "^2.0.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "eslint": "^6.8.0",
    "jest": "^26.6.3",
    "node-notifier": "^9.0.0",
    "ts-jest": "^26.4.4",
    "typescript": "^3.8.3",
    "yargs-parser": ">=18.1.2"
