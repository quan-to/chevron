  "description": "Chevron GPG Library Wrapper for Node.JS",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run clear && tsc",
    "clear": "rimraf ./dist/*",
    "lint": "eslint src/**",
    "repl": "nodemon --config ./repl/nodemon.json ./repl.js --exec babel-node",
